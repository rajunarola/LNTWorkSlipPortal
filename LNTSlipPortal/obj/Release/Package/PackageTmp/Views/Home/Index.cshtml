@model LNTSlipPortal.Models.DashboardDTO

@{
    ViewBag.Title = "Dashboard";
    Layout = "/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-flex align-items-center justify-content-between">
            <h4 class="mb-0 font-size-18">Dashboard</h4>
            <div class="page-title-right">
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-4">
        <div class="card">
            <div class="card-body dashboardCard">
                <div class="row">
                    <div class="col-4 align-self-center">
                        <div class="icon-info">
                            <i class="mdi mdi-receipt text-warning"></i>
                        </div>
                    </div>
                    <div class="col-8 align-self-center text-center">
                        <div class="ml-2 text-right">
                            <p class="mb-1 text-muted font-size-13">Projects</p>
                            <h4 class="mt-0 mb-1 font-20">@Html.DisplayFor(model=>model.ProjectCount)</h4>
                        </div>
                    </div>
                </div>
                <div class="progress mt-5" style="height:3px;">
                    <div class="progress-bar progress-animated  bg-warning" role="progressbar" style="max-width: @Html.DisplayFor(model=>model.ProjectCount)%;" aria-valuenow="55" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-body dashboardCard">
                <div class="row">
                    <div class="col-4 align-self-center">
                        <div class="icon-info">
                            <i class="mdi mdi-account-multiple text-purple"></i>
                        </div>
                    </div>
                    <div class="col-8 align-self-center text-center">
                        <div class="ml-2 text-right">
                            <p class="mb-1 text-muted font-size-13">Employees</p>
                            <h4 class="mt-0 mb-1 font-20">@Html.DisplayFor(model => model.EmployeeCount)</h4>
                        </div>
                    </div>
                </div>
                <div class="progress mt-5" style="height:3px;">
                    <div class="progress-bar progress-animated  bg-purple" role="progressbar" style="max-width: @Html.DisplayFor(model => model.EmployeeCount)%;" aria-valuenow="55" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-body dashboardCard">
                <div class="row">
                    <div class="col-4 align-self-center">
                        <div class="icon-info">
                            <i class="mdi mdi-book text-success"></i>
                        </div>
                    </div>
                    <div class="col-8 align-self-center text-center">
                        <div class="ml-2 text-right">
                            <p class="mb-1 text-muted font-size-13">RAWS</p>
                            <h4 class="mt-0 mb-1 font-20">@Html.DisplayFor(model => model.RAWSCount)</h4>
                        </div>
                    </div>
                </div>
                <div class="progress mt-5" style="height:3px;">
                    <div class="progress-bar progress-animated  bg-success" role="progressbar" style="max-width: @Html.DisplayFor(model => model.RAWSCount)%;" aria-valuenow="35" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
            </div>
        </div>
    </div>

</div>



